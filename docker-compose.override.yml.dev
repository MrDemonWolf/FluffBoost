version: '3.8'
services:
  app:
    build:
      target: development # Specify the target build stage
    environment:
      - NODE_ENV=development # Override environment variables
    ports:
      - "3000:3000"
    volumes:
      - .:/usr/src/app # Mount current directory into the container
      - /usr/src/app/node_modules # Exclude node_modules directory

  mariadb:
    environment:
      - MYSQL_ROOT_PASSWORD=override_root_password # Override MySQL root password
    ports:
      - "3306:3306" # Override port mapping for MySQL
